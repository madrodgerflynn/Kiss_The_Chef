<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <title>Kiss the Cook</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@300;500&family=Shadows+Into+Light&display=swap"
      rel="stylesheet"
    />
    {{! link stylesheet here }}
    <link
      rel="icon"
      href="https://cdn.pixabay.com/photo/2017/11/07/20/16/kiss-2928081_960_720.png"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Kiss the Chef</title>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <h1 class="text-white p-3 mx-auto">
        Welcome to Kiss the Cook!
      </h1>

      <!-- Form for potentially searching tags -->
      <!-- <form class="form-inline my-2 my-lg-0">
        <input
          class="form-control mr-sm-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          Search
        </button>
      </form> -->
    </nav>
    <main>
      <div class="container-expand w-100">

        <div class="row w-100 h-100">
          {{#if loggedIn}}
            <aside
              class="col-xl-2 col-lg-3 col-md-4 col-5 bg-dark h-100 text-white"
            >
              <ul class="nav flex-column">
                <li class="nav-item mx-auto m-3">
                  <button
                    type="button"
                    class="btn btn-light btn-lg"
                    id="allBtn"
                  >
                    All Recipes
                  </button>
                </li>
                <li class="nav-item mx-auto m-3">
                  <button
                    type="button"
                    class="btn btn-light btn-lg"
                    id="myBtn"
                    data-type={{user_id}}
                  >
                    My Recipes
                  </button>
                </li>
                <li class="nav-item mx-auto m-3">
                  <button
                    type="button"
                    class="btn btn-light btn-lg"
                    id="surpriseBtn"
                  >
                    Surprise Me!
                  </button>
                </li>
                <li class="nav-item mx-auto m-3">
                  <button
                    type="button"
                    class="btn btn-light btn-lg"
                    id="addBtn"
                  >
                    Add a Recipe
                  </button>
                </li>
                <li class="nav-item mx-auto m-3">
                  <button
                    type="button"
                    id="logout"
                    class="btn btn-light btn-lg"
                  >
                    Log Out
                  </button>
                </li>
              </ul>
            </aside>
            {{{body}}}
          {{else}}
            {{{body}}}
          {{/if}}
        </div>
      </div>
    </main>
    <script src="/js/menu-buttons.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
  </body>
</html>