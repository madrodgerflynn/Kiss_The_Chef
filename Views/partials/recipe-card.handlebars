<div class="card m-4 d-inline-flex" style="width: 18rem">
  {{#if image}}
    <img
      class="card-img-top"
      src="{{image}}"
      alt="Image of food"
      recipe_id={{id}}
    />

  {{else}}
    <img
      src="https://cdn.pixabay.com/photo/2017/06/06/22/37/italian-cuisine-2378729_1280.jpg"
      alt="No image available"
      class="card-img-top"
      recipe_id={{id}}
    />
  {{/if}}
  <div class="click card-body">
    <h5 class="click card-title text-center">{{title}}</h5>
    <h6 class="click card-text text-center">From the kitchen of: @{{user.username}}</h6>
  </div>
</div>